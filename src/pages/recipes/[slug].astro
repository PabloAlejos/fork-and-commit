---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// This function generates one static page for each recipe
export async function getStaticPaths() {
  const recipes = await getCollection('recipes');

  return recipes.map(recipe => ({
    params: { slug: recipe.slug },
    props: { recipe },
  }));
}

// Get the recipe from props
const { recipe } = Astro.props;

// Render the markdown content
const { Content } = await recipe.render();
---

<Layout title={recipe.data.title}>
  <!-- Header -->
  <header class="header">
    <div class="header-content">
      <a href={import.meta.env.BASE_URL.replace(/\/?$/, '/')} class="back-link">cd ..</a>
      <h1 class="site-title">Fork & Commit</h1>
      <div class="tagline"><span class="prompt">$</span> Where recipes are never half-baked.<span class="cursor">_</span></div>
    </div>
    <div class="header-border"></div>
  </header>

  <!-- Main content -->
  <div class="container">
    <!-- Recipe header -->
    <div class="recipe-header">
      <h1 class="recipe-title">{recipe.data.title}</h1>

      <div class="meta-grid">
        <div class="meta-item">
          <div class="meta-label">Dificultad</div>
          <div class="meta-value">{recipe.data.difficulty}</div>
        </div>
        <div class="meta-item">
          <div class="meta-label">Tiempo Total</div>
          <div class="meta-value">{recipe.data.total_time}</div>
        </div>
        <div class="meta-item">
          <div class="meta-label">Tiempo Activo</div>
          <div class="meta-value">{recipe.data.active_time}</div>
        </div>
        <div class="meta-item">
          <div class="meta-label">Raciones</div>
          <div class="meta-value">{recipe.data.servings} personas</div>
        </div>
      </div>

      {recipe.data.tags && recipe.data.tags.length > 0 && (
        <div class="tags">
          {recipe.data.tags.map(tag => (
            <a href={`${import.meta.env.BASE_URL.replace(/\/?$/, '/')}?tag=${encodeURIComponent(tag)}`} class="tag tag-link">{tag}</a>
          ))}
        </div>
      )}
    </div>

    <!-- Recipe content -->
    <article class="recipe-content">
      <Content />
    </article>
  </div>

  <!-- Footer -->
  <footer class="site-footer">
    <span class="footer-cmd">git cook --with-love</span>
  </footer>
</Layout>

<style>
  /* Header */
  .header {
    background: var(--terminal);
    padding: 1.5rem 2rem 0;
    position: relative;
  }

  .header-content {
    max-width: 900px;
    margin: 0 auto;
    padding-bottom: 1.5rem;
  }

  .header-border {
    height: 3px;
    background: linear-gradient(90deg, var(--ember), var(--saffron));
  }

  .back-link {
    display: inline-block;
    color: var(--saffron);
    text-decoration: none;
    margin-bottom: 0.75rem;
    font-size: 0.85rem;
    font-family: 'JetBrains Mono', monospace;
    transition: color 0.2s ease;
    opacity: 0.8;
  }

  .back-link:hover {
    color: var(--ember);
    opacity: 1;
  }

  .site-title {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 1.8rem;
    color: var(--parchment);
    font-weight: 700;
    letter-spacing: -0.02em;
    margin-bottom: 0.25rem;
  }

  .tagline {
    font-family: 'JetBrains Mono', monospace;
    color: var(--saffron);
    font-size: 0.8rem;
    font-weight: 400;
  }

  .prompt {
    color: var(--coral);
    margin-right: 0.25rem;
  }

  .cursor {
    color: var(--ember);
    animation: blink 1s step-end infinite;
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }

  /* Container */
  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 3rem 1.5rem;
  }

  /* Recipe header */
  .recipe-header {
    margin-bottom: 3rem;
    border-bottom: 2px solid var(--simmer);
    padding-bottom: 2rem;
    animation: fadeInUp 0.6s ease;
  }

  .recipe-title {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 3rem;
    font-weight: 700;
    color: var(--cast-iron);
    line-height: 1.1;
    margin-bottom: 1.5rem;
    letter-spacing: -0.03em;
  }

  /* Meta grid */
  .meta-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1rem;
    margin: 1.5rem 0;
  }

  .meta-item {
    background: var(--flour);
    padding: 1rem;
    border-radius: 8px;
    box-shadow: 0 2px 8px var(--shadow);
    border-left: 3px solid var(--simmer);
  }

  .meta-label {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--ember);
    font-weight: 700;
    margin-bottom: 0.25rem;
    font-family: 'JetBrains Mono', monospace;
  }

  .meta-value {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--cast-iron);
  }

  /* Tags */
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 1.5rem;
  }

  .tags .tag {
    font-size: 0.85rem;
  }

  /* Recipe content */
  .recipe-content {
    animation: fadeInUp 0.6s ease 0.2s both;
  }

  /* Markdown content styling */
  .recipe-content :global(h2) {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 1.8rem;
    font-weight: 700;
    color: var(--cast-iron);
    margin: 3rem 0 1.5rem 0;
    border-left: 4px solid var(--coral);
    padding-left: 1rem;
  }

  .recipe-content :global(h3) {
    font-size: 0.9rem;
    font-weight: 700;
    color: var(--ember);
    margin: 1.5rem 0 1rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-family: 'Space Grotesk', sans-serif;
  }

  .recipe-content :global(p) {
    margin-bottom: 1rem;
    line-height: 1.7;
    color: var(--graphite);
    font-family: 'Source Serif 4', serif;
  }

  .recipe-content :global(ul),
  .recipe-content :global(ol) {
    margin: 1rem 0 1.5rem 1.5rem;
    line-height: 1.7;
  }

  .recipe-content :global(li) {
    margin-bottom: 0.5rem;
    color: var(--graphite);
    font-family: 'Source Serif 4', serif;
  }

  .recipe-content :global(strong) {
    color: var(--ember);
    font-weight: 700;
  }

  .recipe-content :global(code) {
    background: var(--terminal);
    color: rgba(255, 255, 255, 0.9);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-size: 0.85em;
    font-family: 'JetBrains Mono', monospace;
  }

  /* Blockquotes â€” code-comment style */
  .recipe-content :global(blockquote) {
    background: var(--flour);
    border: 1px solid var(--simmer);
    border-left: 3px solid var(--saffron);
    padding: 1.5rem 1.5rem 1.5rem 2rem;
    margin: 2rem 0;
    border-radius: 4px;
    box-shadow: 0 1px 3px var(--shadow);
    position: relative;
  }

  .recipe-content :global(blockquote)::before {
    content: "// Nota:";
    display: block;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: var(--coral);
    margin-bottom: 0.5rem;
    font-weight: 500;
  }

  .recipe-content :global(blockquote p) {
    color: var(--cast-iron);
    position: relative;
    z-index: 1;
  }

  .recipe-content :global(blockquote strong) {
    color: var(--cast-iron);
  }

  /* Footer */
  .site-footer {
    text-align: center;
    padding: 2rem 1rem;
    border-top: 1px solid var(--simmer);
  }

  .footer-cmd {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.8rem;
    color: var(--graphite);
    opacity: 0.7;
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .recipe-title {
      font-size: 2rem;
    }

    .container {
      padding: 2rem 1rem;
    }

    .meta-grid {
      grid-template-columns: 1fr 1fr;
    }

    .header {
      padding: 1rem 1.5rem 0;
    }

    .site-title {
      font-size: 1.5rem;
    }
  }

  /* Print styles for kitchen use */
  @media print {
    .header {
      display: none;
    }

    .site-footer {
      display: none;
    }

    .container {
      max-width: 100%;
      padding: 0;
    }

    .recipe-content :global(h2) {
      page-break-before: always;
    }
  }
</style>
